{
  "name": "lumosnap",
  "version": "0.2.0-alpha",
  "description": "LumoSnap Desktop - Photo sharing app for photographers",
  "main": "./out/main/index.js",
  "author": "hello@jithinsha.in, darkwebplayer101@gmail.com",
  "homepage": "https://lumosnap.com",
  "scripts": {
    "format": "prettier --write .",
    "generate-icons": "pnpx @sunjw8888/electron-icon-builder --input=./src/assets/logo.png --output=./build && cp build/icons/win/icon.ico build/ && cp build/icons/mac/icon.icns build/ && cp build/icons/png/512x512.png build/icon.png && cp build/icons/png/512x512.png resources/icon.png",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "ELECTRON_DISABLE_SANDBOX=1 electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@fontsource/outfit": "^5.2.8",
    "@tailwindcss/vite": "^4.1.17",
    "axios": "^1.13.2",
    "better-auth": "^1.4.5",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^5.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9",
    "hash-wasm": "^4.12.0",
    "image-size": "^2.0.2",
    "lucide-vue-next": "^0.555.0",
    "photoswipe": "^5.4.4",
    "pinia": "^3.0.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@playwright/test": "^1.57.0",
    "@sunjw8888/electron-icon-builder": "^3.0.0",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.16",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vitest": "^4.0.16",
    "vue": "^3.5.21",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
